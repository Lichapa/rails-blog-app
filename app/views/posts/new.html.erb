<h1>New Post</h1>

<%= form_with model: @post, url: "/users/#{current_user.id}/posts" do |f| %>

<div>
    <%= f.hidden_field :user_id, value: current_user.id %> 
</div>
<div class="details-box">
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :Message  %>
      <%= f.text_area :text %>
    </div>

    <div>
      <%= f.submit %>
    </div>
  </div>

<% end%>